<% include ../partials/header %>


    <div class="container">

      <header class="jumbotron allcamp">
      <div class="container">
        <h3 class="text-center">Welcome to Grizli Camp!</h3>
        <p class="text-center">You can choose <br> OR</p>
        <p><a class="btn btn-info btn-large btn-block" href="/campgrounds/new">Add New Camps</a>
        </p>
      </div>
        </header>

      <div class="row text-center" style="display:flex; flex-wrap: wrap;">

        <% campgrounds.forEach(function(campground) { %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
            <img  class="img-thumbnail" src="<%= campground.image %>">
            <div class="caption">
              <h4><%= campground.name %> - $ <%= campground.price %> per day</h4>
            </div>
            <p>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More </a>
            </p>
              </div>
          </div>

        <% }) %>
        </div>
      </div>

<% include ../partials/footer %>
